// vim: set filetype=c:
// ANSIBLE-MANAGED CONFIGURATION FILE
// Refs: modified material theme

* {
  base00: #263238;
  base01: #2E3C43;
  base02: #314549;
  base03: #546E7A;
  base04: #B2CCD6;
  base05: #EEFFFF;
  base06: #EEFFFF;
  base07: #FFFFFF;
  base08: #F07178;
  base09: #F78C6C;
  base0A: #FFCB6B;
  base0B: #C3E88D;
  base0C: #89DDFF;
  base0D: #00BCD4;
  base0E: #C792EA;
  base0F: #FF5370;
  spacing: 0;
  background-color: transparent;
  font: "{{ rofi_font }}";
}

window {
  transparency: "real";
  fullscreen: false;
  width: 50%;                  /* width % of screen size */
  background-color: #263238CC; /* base00 + CC (80% opacity) */
  border-radius: 10px;
}

mainbox {
  children: [inputbar, listview];
  spacing: 30px;
  padding: 30px 10px;
  border: 1px;
  border-color: @base0C;
}

inputbar {
  padding: 10px 30px;
  margin: 0 10px 0 30px;
  border: 1px;
  border-color: @base09;
  children: [prompt, textbox-prompt-colon, entry, case-indicator];
}

prompt {
  text-color: @base0A;
  children: [prompt, textbox-prompt-colon, entry, case-indicator];
}

textbox-prompt-colon {
  expand: false;
  str: ":";
  margin: 0 1ch 0 0;
  text-color: @base0A;
}

entry {
  text-color: @base07;
}

listview {
  scrollbar: true;
  margin: 0 10px 0 30px;
  lines: 10;              /* show this number-of-rows */
}

scrollbar {
  background-color: @base03;
  handle-color: @base04;
  handle-width: 10px;
  border: 0 1px;
  border-color: @base04;
  margin: 0 0 0 20px;
}

element {
  padding: 10px;
  highlight: bold underline;
}

element normal, element alternate {
  background-color: transparent;
}

element selected {
  background-color: @base03;
}

element normal normal, element selected normal, element alternate normal {
  text-color: @base07;
}

element normal urgent, element selected urgent, element alternate urgent {
  text-color: @base0F;
}

element normal active, element selected active, element alternate active {
  text-color: @base0B;
}

